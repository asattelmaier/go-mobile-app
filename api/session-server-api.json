{
  "openapi": "3.0.1",
  "info": {
    "title": "Go Game Session Server API",
    "description": "API for Go Game Session Management and Gameplay",
    "version": "v0.0.1"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:8080",
      "description": "Generated server url"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "authentication-controller"
        ],
        "operationId": "register",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterUserDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/TokensDto"
                }
              }
            }
          }
        }
      }
    },
    "/auth/register/guest": {
      "post": {
        "tags": [
          "authentication-controller"
        ],
        "operationId": "registerGuest",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/TokensDto"
                }
              }
            }
          }
        }
      }
    },
    "/auth/refresh-token": {
      "post": {
        "tags": [
          "authentication-controller"
        ],
        "operationId": "refreshToken",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RefreshTokenDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/TokensDto"
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "authentication-controller"
        ],
        "operationId": "logout",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/auth/authenticate": {
      "post": {
        "tags": [
          "authentication-controller"
        ],
        "operationId": "authenticate",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthenticateUserDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/TokensDto"
                }
              }
            }
          }
        }
      }
    },
    "/user": {
      "get": {
        "tags": [
          "user-controller"
        ],
        "operationId": "getUser",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/UserDto"
                }
              }
            }
          }
        }
      }
    },
    "/game/session/pending": {
      "get": {
        "tags": [
          "session-rest-controller"
        ],
        "operationId": "getPendingSessions",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/SessionDto"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RegisterUserDto": {
        "required": [
          "password",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "TokensDto": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string"
          },
          "refreshToken": {
            "type": "string"
          }
        }
      },
      "RefreshTokenDto": {
        "type": "object",
        "properties": {
          "refreshToken": {
            "type": "string"
          }
        }
      },
      "AuthenticateUserDto": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "UserDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      },
      "PlayerDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "color": {
            "type": "string"
          },
          "isBot": {
            "type": "boolean"
          }
        }
      },
      "SessionDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "players": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PlayerDto"
            }
          },
          "difficulty": {
            "type": "string"
          },
          "boardSize": {
            "type": "integer",
            "format": "int32"
          },
          "hasError": {
            "type": "boolean"
          },
          "errorMessage": {
            "type": "string"
          }
        }
      },
      "EndGameDto": {
        "type": "object",
        "properties": {
          "score": {
            "type": "number",
            "format": "double"
          },
          "winner": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PlayerDto"
            }
          }
        }
      },
      "BoardStateDto": {
        "type": "object",
        "properties": {
          "rows": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/IntersectionRowDto"
            }
          }
        }
      },
      "GameDto": {
        "type": "object",
        "properties": {
          "settings": {
            "$ref": "#/components/schemas/SettingsDto"
          },
          "activePlayer": {
            "$ref": "#/components/schemas/PlayerDto"
          },
          "passivePlayer": {
            "$ref": "#/components/schemas/PlayerDto"
          },
          "positions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/BoardStateDto"
            }
          },
          "isGameEnded": {
            "type": "boolean"
          }
        }
      },
      "IntersectionDto": {
        "type": "object",
        "properties": {
          "location": {
            "$ref": "#/components/schemas/LocationDto"
          },
          "state": {
            "type": "string",
            "enum": [
              "Black",
              "White",
              "Empty"
            ]
          }
        }
      },
      "IntersectionRowDto": {
        "type": "object",
        "properties": {
          "cols": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/IntersectionDto"
            }
          }
        }
      },
      "LocationDto": {
        "type": "object",
        "properties": {
          "x": {
            "type": "integer",
            "format": "int32"
          },
          "y": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "SettingsDto": {
        "type": "object",
        "properties": {
          "boardSize": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "DeviceMove": {
        "type": "object",
        "properties": {
          "x": {
            "type": "integer",
            "format": "int32"
          },
          "y": {
            "type": "integer",
            "format": "int32"
          },
          "type": {
            "type": "string",
            "enum": [
              "PLAY",
              "PASS"
            ]
          }
        }
      },
      "CreateSessionDto": {
        "required": [
          "playerId"
        ],
        "type": "object",
        "properties": {
          "playerId": {
            "type": "string"
          },
          "difficulty": {
            "type": "string",
            "enum": [
              "EASY",
              "MEDIUM",
              "HARD"
            ]
          },
          "boardSize": {
            "maximum": 19,
            "minimum": 9,
            "type": "integer",
            "format": "int32"
          }
        }
      }
    }
  }
}
